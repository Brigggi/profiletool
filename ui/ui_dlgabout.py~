class DlgAbout(QDialog, Ui_DlgAbout):

	def __init__(self, parent=None):
		QDialog.__init__(self, parent)
		self.setupUi(self)
		#QObject.connect(self.wdg, SIGNAL( "closed(PyQt_PyObject)" ), self.cleaning2)

		#fp = os.path.dirname(__file__)+"/metadata.txt"
		#fp = os.pardir + "/metadata.txt"
		#fp = os.path.join(os.pardir, "metadata.txt")
		#print fp
		#print os.path.dirname(__file__)+"/metadata.txt"
		#print os.path.abspath(os.path.join(os.path.dirname(__file__),".."))
		fp = os.path.join( os.path.abspath(os.path.join(os.path.dirname(__file__),"..")) , "metadata.txt")

		iniText = QSettings(fp, QSettings.IniFormat)
		verno = iniText.value("version").toString()
		name = iniText.value("name").toString()
		description = iniText.value("description").toString()
		#print description
		#self.logo.setPixmap( QPixmap( ":/faunalia/logo" ) )
		self.title.setText( name )
		self.description.setText( description  + " - " + verno)




